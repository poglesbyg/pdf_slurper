# Web UI Dockerfile - serves static HTML with nginx
FROM nginx:alpine-slim

# Install curl for health checks
RUN apk add --no-cache curl

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy nginx configuration
COPY nginx/nginx.conf /etc/nginx/conf.d/app.conf

# Create directory for static files
RUN mkdir -p /usr/share/nginx/html

# Copy static HTML files
COPY web-static/*.html /usr/share/nginx/html/

# Create submission detail page (template)
RUN cat > /usr/share/nginx/html/submission.html << 'EOF'
<!DOCTYPE html>
<html>
<head>
    <title>Submission Detail - PDF Slurper</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-4">Submission Detail</h1>
        <div id="content" class="bg-white rounded-lg shadow p-6">
            <p>Loading submission details...</p>
        </div>
        <script>
            const params = new URLSearchParams(window.location.search);
            const id = params.get('id');
            if (id) {
                fetch(`/api/v1/submissions/${id}`)
                    .then(r => r.json())
                    .then(data => {
                        document.getElementById('content').innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
                    })
                    .catch(err => {
                        document.getElementById('content').innerHTML = `<p class="text-red-600">Error: ${err.message}</p>`;
                    });
            }
        </script>
    </div>
</body>
</html>
EOF

# Fix permissions for OpenShift
RUN chgrp -R 0 /usr/share/nginx/html /var/cache/nginx /var/log/nginx /var/run && \
    chmod -R g=u /usr/share/nginx/html /var/cache/nginx /var/log/nginx /var/run && \
    sed -i 's/listen       80;/listen       8080;/g' /etc/nginx/nginx.conf && \
    sed -i 's/user  nginx;/#user  nginx;/g' /etc/nginx/nginx.conf

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run nginx
CMD ["nginx", "-g", "daemon off;"]
